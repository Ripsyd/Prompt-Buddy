{
  "manifest_version": 3,
  "name": "Prompt Buddy",
  "version": "1.0.2",
  "description": "Automatically create engineer-grade ChatGPT prompts with AI. One click for intelligent optimization.",
  "author": "Prompt Buddy Team",
  "homepage_url": "https://github.com/promptbuddy/extension",
  
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*"
      ],
      "js": ["src/content.js"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  
  "icons": {
    "16": "icons/activelogo.png",
    "48": "icons/activelogo.png",
    "128": "icons/activelogo.png"
  },
  
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/activelogo.png",
      "48": "icons/activelogo.png",
      "128": "icons/activelogo.png"
    },
    "default_title": "Prompt Buddy Settings"
  },
  
  "background": {
    "service_worker": "src/background.js",
    "type": "module"
  },
  
  "permissions": [
    "storage"
  ],
  
  "host_permissions": [
    "https://api.openai.com/*",
    "https://*.openai.com/*",
    "https://formspree.io/*",
    "https://api.emailjs.com/*",
    "https://hook.eu1.make.com/*"
  ],
  
  "web_accessible_resources": [
    {
      "resources": ["icons/icon-*.svg"],
      "matches": ["https://chat.openai.com/*", "https://chatgpt.com/*"]
    }
  ],
  
  "minimum_chrome_version": "88",
  
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; style-src 'self' 'unsafe-inline';"
  }
}